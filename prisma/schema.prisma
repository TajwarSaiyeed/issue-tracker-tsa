generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

model Issue {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  status      IssueStatus @default(OPEN)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
