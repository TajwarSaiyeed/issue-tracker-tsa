// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

model Issue {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  title            String
  description      String
  status           IssueStatus @default(OPEN)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  assignedToUserId String?     @db.ObjectId
  assignedToUser   User?       @relation("AssignedToUser", fields: [assignedToUserId], references: [id])
  createdByUserId  String      @db.ObjectId
  createdByUser    User        @relation("CreatedByUser", fields: [createdByUserId], references: [id])
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  issuesAssigned Issue[] @relation("AssignedToUser")
  issuesCreated  Issue[] @relation("CreatedByUser")

  @@unique([id, email])
}
